@inherits LayoutComponentBase
@using System.Net

<div class="flex flex-row items-center bg-merlin h-[40px] dark:bg-shark">
    <div class="h-[48px] w-[48px]"></div>

    <h1 class="px-5 text-xl font-semibold text-white">Emulator for Azure App Configuration</h1>
</div>

<div class="flex flex-row px-4 pt-2 text-lg">
    <div class="px-1">Home</div>
</div>

<div class="flex flex-col">
    <header class="flex py-2 px-5 flex-row-wrap">
        <div class="mr-2.5 h-[28px] w-[28px]"></div>

        <div>
            <h2 class="mr-4 font-semibold text-[24px]">@Dns.GetHostName()</h2>

            <div class="text-sm text-storm-dust dark:text-star-dust">App Configuration</div>
        </div>
    </header>

    <div class="flex flex-row">
        <div class="flex-none w-[265px]">
            <NavMenu/>
        </div>

        <main class="flex-1">@Body</main>
    </div>
</div>

<div class="hidden fixed bottom-0 left-0 py-2.5 px-5 w-full text-white bg-black dark:text-black dark:bg-white z-[1000]" id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="absolute top-2 right-3 cursor-pointer dismiss">🗙</a>
</div>